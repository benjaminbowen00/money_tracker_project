<form method="post" action="/transactions">


  <div>
    <label>Amount</label>
    <div >
      <input
      type="number"
      name="amount"
      placeholder="Â£10.00"
      step = "0.01"
      required
      />
    </div>
  </div>

  <div>
    <label>Date</label>
    <div >
      <input
      type="date"
      name="date_of_transaction"
      placeholder="25/11/2017"
      required
      />
    </div>
  </div>

  <div >
    <label >Select a shop:</label>
    <div >
      <select name="shop_id">
        <option value="" disabled selected>Select your option</option>
        <% @shops.each do |shop| %>

        <option value= <%= shop.id  %>><%= shop.name%></option>
        <% end %>
      </select>
    </div>
  </div>

  <div >
    <label >Select a category:</label>
    <div >
      <select name="category_id">
        <option value="" disabled selected>Select your option</option>
        <% @categories.each do |category| %>

        <option value= <%= category.id  %>><%= category.name%></option>
        <% end %>
      </select>
    </div>
  </div>



  <div>
    <label>Comment:</label>
    <div >
      <input
      type="text"
      name="comment"
      placeholder="Any useful comment"
      />
    </div>
  </div>

  <button>Save transaction</button>
  </form>
