<h3>Use this page to add a transaction</h3>
<p>If the shop or category is not on the list, add it before you add the transaction.</p>

<div class="inline">
  <a href=/shops/new><button class='cat_shop_button'>Add a new shop</button></a>
</div>
<div class="inline">
  <a href='/categories/new'><button class="cat_shop_button">Add a new category</button></a>
</div>


<form class="form-styling" method="post" action="/transactions">


  <div>
    <label>Amount</label>
      <input
      type="number"
      name="amount"
      placeholder="Â£10.00"
      step = "0.01"
      required
      />
  </div>

  <div>
    <label>Date</label>
      <input
      type="date"
      name="date_of_transaction"
      placeholder="25/11/2017"
      required
      />
  </div>

  <div >
    <label >Select a shop:</label>
      <select name="shop_id">
        <option value="" disabled selected>Select your option</option>
        <% @shops.each do |shop| %>

        <option value= <%= shop.id  %>><%= shop.name%></option>
        <% end %>
      </select>
  </div>

  <div >
    <label >Select a category:</label>
      <select name="category_id">
        <option value="" disabled selected>Select your option</option>
        <% @categories.each do |category| %>

        <option value= <%= category.id  %>><%= category.name%></option>
        <% end %>
      </select>
  </div>



  <div>
    <label>Comment:</label>
      <input
      type="text"
      name="comment"
      placeholder="Any useful comment"
      />
  </div>

  <button>Save transaction</button>
  </form>
