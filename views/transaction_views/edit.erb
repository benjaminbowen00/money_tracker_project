<form method="post" action="/transactions/<%= @transaction.id %>">
  <input type="hidden" name="_method" value="put">



  <div>
    <label>Amount, £</label>
      <input
      type="number"
      name="amount"
      placeholder="£10.00"
      value = "<%= @transaction.amount %>"
      step = "0.01"
      />
  </div>

  <div>
    <label>Date</label>
      <input
      type="date"
      name="date_of_transaction"
      placeholder="25/11/2017"
      value = "<%= @transaction.date_of_transaction %>"
      />
  </div>

  <div >
    <label >Select a shop:</label>
      <select name="shop_id">
        <% @shops.each do |shop| %>

        <option value= <%= shop.id  %> <%= "selected" if @transaction.shop_id.to_i == shop.id.to_i %>><%= shop.name%></option>

        <% end %>
      </select>
  </div>

  <div >
    <label >Select a category:</label>
      <select name="category_id" >
        <% @categories.each do |category| %>
        <option value=<%= category.id %> <%= "selected" if @transaction.category_id.to_i == category.id.to_i %>> <%= category.name%></option>
        <% end %>
      </select>
  </div>



  <div>
    <label>Comment:</label>
      <input
      type="text"
      name="comment"
      value="<%= @transaction.comment %>"
      />
  </div>

  <button>Save transaction</button>
  </form>
