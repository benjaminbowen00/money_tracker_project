<h2>View your transactions by month</h2>
<table class="smaller-table">
  <tr>
    <th>Month</th>
    <th>Year</th>
    <th>Spend</th>
    <th>View transactions</th>
  </tr>
  <% @months_array.each do |month| %>
  <tr>
    <td><%= Date::MONTHNAMES[month.month] %></td>
    <td><%= month.year %></td>
    <td><%= "Â£#{sprintf('%.2f', Transaction.total_by_month(month.year, month.month))}" %></td>
    <td>
      <% if Transaction.total_by_month(month.year, month.month)==0 %>
      <%= "N/A" %>
      <% else %>

      <form action="/months/<%= month.year %>/<%= month.month %>/transactions"     method="get">
      <input class="table-button" type="submit" value="Transactions">
      <% end %>
    </form></td>

  </tr>
  <% end %>


</table>
