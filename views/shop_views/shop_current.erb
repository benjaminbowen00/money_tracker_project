<h2 class='table-title'>Shops</h2>
<div >
  <p>The total spend for <%= Date::MONTHNAMES[@month] %> <%= @year %> is <b><%= "£#{sprintf('%.2f', @monthly_spend)}" %></b></p>
</div>
<div class="inline">
  <a href=/shops/new><button class='cat_shop_button'>Add a new shop</button></a>
</div>

<div >
  <table>
    <tr>
      <th>Shop</th>
      <th>Total spend</th>
      <th>View transactions</th>
      <th>Edit shop</th>
      <th>Remove shop</th>
    </tr>

    <% @shops.each do |shop| %>
    <tr>
      <td><%= "#{shop.name}" %></a> </td>
      <td> <%= "£#{sprintf('%.2f', shop.total_spend_by_shop_year_month(@year, @month))}" %> </td>

      <td>
        <% if shop.total_spend_by_shop_year_month(@year, @month)==0 %>
        <%= "N/A" %>
        <% else %>
        <form action="/shops/current/<%= shop.id %>/transactions"     method="get">
          <input class="table-button" type="submit" value="Transactions"></form>
          <% end %>
        </td>

        <td>  <form action="/shops/<%= shop.id %>/edit"     method="get">
          <input class="table-button" type="submit" value="Edit">
        </form></td>
        <td>  <form action="/shops/<%= shop.id %>/warning"     method="get">
          <input class="table-button" type="submit" value="Remove">
        </form>
      </td>

    </tr>
    <% end %>

  </table>
</div>
